<h1>Listing Appointments</h1>
<% @appointments.each do |appointment| %>
    <label>Name:</label> <%= appointment.name %>
    <label>Date:</label> <%= appointment.date %>
    <label>Quantity:</label> <%= appointment.quantity %>
    <% if current_user.admin %>
        <%= link_to "Show #{appointment.name}", appointment_path(appointment) %><br>
    <% else %>
        <%= link_to "Go to #{appointment.name}", appointment_path(appointment) %><br>
    <% end %>    
<% end %>

<% if !!@user %>
    <%= button_to "Back to profile", user_path(@user) %>
<% else %>
    <%= link_to 'New Appointment', new_appointment_path %>
<% end %>        
