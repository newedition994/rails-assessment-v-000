<%= render 'layouts/form_messages', object: @appointment %>
<%= form_for @appointment do |f| %>
    <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
    </div>
    <div class="form-group">
    <%= f.label :date %> 
    <%= f.date_field :date %>
    </div>   
    <div class="form-group">
    <%= f.label :quantity, 'Quantity' %>
    <%= f.number_field :quantity, in: 1..5 %>
    </div>
    <%= f.submit %>
<% end %>    