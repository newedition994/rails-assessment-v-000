<%= form_for(@package, url: packages_new_path) do |f| %>  
    <div class="form-group">
        <%= f.label :name %> 
        <%= f.text_field :name %>
    </div> 
    <br> 
    <div class="form-group">
        <%= f.label :description %> 
        <%= f.text_area :description %>
    </div>  
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>  

